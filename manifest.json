{
    "name": "youtube-prism",
    "version": "0.1",
    "manifest_version": 3,

    "permissions": [
      "activeTab",
      "scripting",
      "nativeMessaging"
    ],

    "host_permissions": ["<all_urls>"],

    "background": {
      "service_worker": "background.js"
    },

    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "run_at": "document_start",
        "js": ["./js/core.js", "./js/makeChanges.js"]
      }
    ],

    "action": {}
  }